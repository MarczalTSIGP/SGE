<% provide(:title, t('devise.passwords.new.forgot_your_password')) %>
<% provide(:head_title, t('devise.passwords.new.forgot_your_password')) %>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :email,autofocus: true, input_html: { autocomplete: "email" } %>

  <%= f.button :submit, t('devise.passwords.new.proceed'), class: 'btn btn-primary btn-block' %>
<% end %>

