<% provide(:head_title, t('devise.passwords.edit.change_your_password')) %>
<% provide(:title, t('devise.passwords.edit.change_your_password')) %>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <%= f.input :password,
      hint: ("#{@minimum_password_length} #{t('devise.passwords.character_length')}" if @minimum_password_length),
      input_html: { autocomplete: "new-password" } %>

  <%= f.input :password_confirmation, required: true %>

  <%= f.button :submit, t('devise.passwords.edit.change_my_password'), class: 'btn btn-primary btn-block' %>
<% end %>

<%= render 'participants/clients/shared/links' %>
