<% provide(:head_title, t('devise.sessions.new.sign_in')) %>
<% provide(:title, t('devise.sessions.new.client.title')) %>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.input :login, autofocus: true %>
  <%= f.input :password %>
  <%= f.input :remember_me, as: :checkbox_tabler if devise_mapping.rememberable? %>

  <%= f.button :submit, t('devise.sessions.new.buttons.submit'), class: 'btn btn-primary btn-block' %>
<% end %>

<%= render 'participants/clients/shared/links' %>
