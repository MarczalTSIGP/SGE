<% provide(:head_title, t('devise.registrations.edit.profile')) %>
<% provide(:page_title, t('devise.registrations.edit.profile')) %>

<%= simple_form_for(resource, as: resource_name,
                    url: registration_path(resource_name),
                    html: { method: :put, multipart: true }) do |f| %>

  <%= f.error_notification %>

  <fieldset class="form-fieldset">
    <legend class="w-auto"><%= t('views.fieldset.personal_data') %></legend>

    <div class="row">
      <div class="col-sm-6">
        <%= f.input :name %>
      </div>
      <div class="col-sm-6">
        <%= f.input :cpf %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <%= f.input :email %>
      </div>
      <div class="col-sm-6">
        <%= f.input :alternative_email %>
      </div>
    </div>

    <%= f.input :kind, as: :radio_buttons_tabler, collection: Client.human_kinds %>
  </fieldset>

  <fieldset class="form-fieldset">
    <legend class="w-auto"><%= t('views.fieldset.passwords') %></legend>
    <div class="row">
      <div class="col-sm-6">
        <%= f.input :password,
            hint: ("#{@minimum_password_length}  #{t('devise.passwords.character_length')}" if @minimum_password_length) %>
      </div>
      <div class="col-sm-6">
        <%= f.input :password_confirmation %>
      </div>
    </div>

    <%= f.input :current_password,
        hint: t('devise.registrations.edit.we_need_your_current_password_to_confirm_your_changes') %>

  </fieldset>

  <div class="d-flex">
    <%= link_to t('views.links.back'), :participants_root, class: 'btn btn-secondary' %>
    <%= f.button :submit, t('devise.registrations.edit.update'), class: 'btn-primary ml-auto' %>
  </div>
<% end %>

