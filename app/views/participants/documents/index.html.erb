<% provide(:head_title, t('activerecord.models.document.other')) %>
<% provide(:page_title, t('activerecord.models.document.other')) %>


<div class="table-responsive">
  <table class="table table-data card-table text-nowrap">
    <thead>
    <tr>
      <th><%= t('activerecord.attributes.document.title') %></th>
      <th><%= t('activerecord.attributes.document.date') %></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.title %></td>
        <td><%= document.created_at.strftime("%d-%m-%Y") %></td>
        <td>
          <%= link_to participants_document_path(document), target: :_blank do %>
            <%= icon('fas', 'search', class: 'icon', data: { toggle: 'tooltip' }, title: t('views.links.show')) %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="d-flex justify-content-center">
  <%= paginate @documents %>
</div>