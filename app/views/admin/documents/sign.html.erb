<% provide(:head_title, t('activerecord.models.document.other')) %>
<% provide(:page_title, t('activerecord.models.document.other')) %>

<div class="card">
  <div class="card-body p-6">

    <%= simple_form_for [:admin, @document], method: :post, url: admin_post_user_documents_sign_path(@document) do |f| %>
      <h3>Assinar <%= @document.title.titleize %></h3>
      <%= f.input :login, required: false, autofocus: true, label_html: {class: 'form-label'} %>
      <%= f.input :password, required: false, label_html: {class: 'form-label'} %>
            <div class="form-footer">
        <%= f.button :submit, 'Assinar', class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

  </div>
</div>
