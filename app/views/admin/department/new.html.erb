<h3>Novo Departamento</h3>
<%= simple_form_for(@department, url: admin_department_index_path) do |f| %>
  <div class="form-inputs">
    <%= f.input :name, error: 'Nome é obrigatório, por favor insira um.' %>
    <%= f.input :initials %>
    <%= f.input :description %>
    <%= f.input :local %>
    <%= f.input :phone, as: :tel %>
    <%= f.input :department_email, placeholder: 'user@domain.com' %>
    <%= f.input :department_responsible %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
<%= link_to 'Voltar', admin_department_index_path %>
