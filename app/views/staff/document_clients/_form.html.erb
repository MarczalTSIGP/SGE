<%= simple_form_for [:staff, @dept, @div, @doc, @document_client], html: { multipart: true } do |f| %>
  <%= f.input :cpf %>
  <%= f.simple_fields_for(:information) do |field| %>
    <% @document_client.information.each do |key, value| %>
      <%= field.input key, input_html: { value: value } %>
    <% end %>
  <% end %>
  <div class='d-flex'>
    <%= link_to t('views.links.back'), staff_department_division_document_document_clients_path(@dept, @div, @doc), class: 'btn btn-secondary' %>
    <%= f.button :submit, class: 'btn btn-primary ml-auto' %>
  </div>
<% end %>