<% provide(:head_title, t('views.names.document.plural')) %>
<% provide(:page_title, t('views.names.document.plural')) %>

<%= render 'shared/search_and_new', search_path: staff_documents_search_path,
           new_path: new_staff_document_path, new_link: 'document.new' %>

<div class="text-right mt-2 mb-1">
  <%= page_entries_info @documents %>
</div>

<div class="table-responsive">
  <table class="table table-data card-table table-vcenter">
    <thead>
    <tr>
      <th><%= t('activerecord.attributes.document.title') %></th>
      <th><%= t('activerecord.attributes.document.division_id') %></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <%= render @documents %>
    </tbody>
  </table>
</div>

<%= paginate @documents %>
