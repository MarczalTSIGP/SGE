  <div class="col-sm-6 col-lg-4">
    <div class="card p-3">
      <div class="d-flex align-items-center">
        <span class="stamp stamp-md bg-red mr-3">
          <%= icon('fas', 'user-cog') %>
        </span>
        <div>
          <h4 class="m-0"><%= link_to t('helpers.links.admin.access'), new_user_session_path %></h4>
