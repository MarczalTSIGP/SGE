<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>
      <%= full_title(yield(:head_title)) %>
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'staff/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'staff/application', 'data-turbolinks-track': 'reload' %>

    <%= favicon_link_tag %>
  </head>

  <body id="<%= controller_name %>-<%= action_name %>" class="has-fixed-top">
    <div id="app" class="page">
      <div class="page-main">

        <div class="container-fluid m-0">
          <div class="row">
            <%= render 'layouts/shared/header', current_user: current_user, path: staff_root_path %>
            <%= render 'layouts/staff/sidebar' %>

            <div class="col-md-9 col-lg-10">

              <div class="card" id="main-card">
                <div class="card-header">
                  <h1 class="page-title mb-3">
                    <%= yield(:page_title) %>
                  </h1>
                </div>
                <div class="card-body">
                  <%= render 'shared/flash_messages'%>
                  <%= yield %>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </body>
